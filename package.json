{
  "name": "the-theme",
  "version": "0.0.1",
  "description": "A gem based Jekyll theme with universal grid, layout, and styles for use with all individually styled DAI blogs.",
  "main": "gulpfile.js",
  "scripts": {
    "serve": "browser-sync start --config browser-sync.js",
    "build": "bundle exec jekyll build --incremental --watch",
    "jekyllfy": "npm run build & npm run serve"
