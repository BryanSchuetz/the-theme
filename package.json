    "type": "git",
    "url": "https://github.com/BryanSchuetz/the-theme"
  },
  "keywords": [
    "dai"
  ],
  "author": "bryan schuetz",
  "bugs": {
    "url": "https://github.com/BryanSchuetz/the-theme/issues"
  },
  "homepage": "https://github.com/BryanSchuetz/the-theme#readme",
  "devDependencies": {
    "gulp": "3.9.1",
    "browser-sync": "2.27.10",
    "gulp-shell": "0.5.2",
    "gulp-uglify": "1.5.4"
  }
}
